<Window x:Class="RevitAIArchitect.ChatWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RevitAIArchitect"
        mc:Ignorable="d"
        Title="Revit AI Assistant" Height="620" Width="450" WindowStartupLocation="CenterScreen" Topmost="True">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Provider & Model Selection -->
        <Border Grid.Row="0" Background="#E3F2FD" CornerRadius="5" Padding="8" Margin="0,0,0,5">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <!-- Provider -->
                <TextBlock Grid.Row="0" Grid.Column="0" Text="AI Provider:" VerticalAlignment="Center" Margin="0,0,8,5" FontWeight="Bold"/>
                <ComboBox x:Name="ProviderCombo" Grid.Row="0" Grid.Column="1" Height="28" Margin="0,0,0,5" SelectionChanged="ProviderCombo_SelectionChanged">
                    <ComboBoxItem Content="OpenAI" Tag="openai"/>
                    <ComboBoxItem Content="Google Gemini" Tag="gemini"/>
                </ComboBox>
                
                <!-- Model -->
                <TextBlock Grid.Row="1" Grid.Column="0" Text="Model:" VerticalAlignment="Center" Margin="0,0,8,0" FontWeight="Bold"/>
                <ComboBox x:Name="ModelCombo" Grid.Row="1" Grid.Column="1" Height="28" SelectionChanged="ModelCombo_SelectionChanged"/>
            </Grid>
        </Border>

        <!-- API Key Section -->
        <Border Grid.Row="1" Background="#E8F5E9" CornerRadius="5" Padding="8" Margin="0,0,0,5">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Column="0" Text="API Key:" VerticalAlignment="Center" Margin="0,0,8,0" FontWeight="Bold"/>
                <PasswordBox x:Name="ApiKeyBox" Grid.Column="1" Height="28" VerticalContentAlignment="Center" Padding="5"/>
                <Button x:Name="SaveKeyButton" Grid.Column="2" Content="Save" Width="50" Margin="5,0,0,0" Click="SaveKeyButton_Click"/>
            </Grid>
        </Border>

        <!-- Context & Verify Section -->
        <Border Grid.Row="2" Background="#FCE4EC" CornerRadius="5" Padding="8" Margin="0,0,0,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <CheckBox x:Name="IncludeContextCheck" Grid.Column="0" Content="Include Revit Context" IsChecked="True" VerticalAlignment="Center" FontWeight="Bold"/>
                <Button x:Name="VerifyButton" Grid.Column="1" Content="ðŸ” Verify Project" Width="110" Click="VerifyButton_Click"/>
            </Grid>
        </Border>

        <!-- Chat History -->
        <ListView x:Name="ChatHistory" Grid.Row="4" Margin="0,0,0,10" ScrollViewer.HorizontalScrollBarVisibility="Disabled">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Border Background="#F0F0F0" CornerRadius="5" Padding="8" Margin="0,2">
                        <TextBox Text="{Binding}" TextWrapping="Wrap" IsReadOnly="True" 
                                 BorderThickness="0" Background="Transparent" 
                                 Cursor="IBeam" Focusable="True"/>
                    </Border>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <!-- Input Area -->
        <Grid Grid.Row="5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <TextBox x:Name="InputBox" Grid.Column="0" Height="30" VerticalContentAlignment="Center" Padding="5"/>
            <Button x:Name="SendButton" Grid.Column="1" Content="Send" Width="60" Margin="5,0,0,0" Click="SendButton_Click"/>
        </Grid>
    </Grid>
</Window>
