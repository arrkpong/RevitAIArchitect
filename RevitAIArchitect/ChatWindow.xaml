<Window x:Class="RevitAIArchitect.ChatWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RevitAIArchitect"
        mc:Ignorable="d"
        Title="Revit AI Assistant" Height="450" Width="400" WindowStartupLocation="CenterScreen" Topmost="True">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Chat History -->
        <ListView x:Name="ChatHistory" Grid.Row="0" Margin="0,0,0,10" ScrollViewer.HorizontalScrollBarVisibility="Disabled">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Border Background="#F0F0F0" CornerRadius="5" Padding="8" Margin="0,2">
                        <TextBlock Text="{Binding}" TextWrapping="Wrap"/>
                    </Border>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <!-- Input Area -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <TextBox x:Name="InputBox" Grid.Column="0" Height="30" VerticalContentAlignment="Center" Padding="5"/>
            <Button x:Name="SendButton" Grid.Column="1" Content="Send" Width="60" Margin="5,0,0,0" Click="SendButton_Click"/>
        </Grid>
    </Grid>
</Window>
